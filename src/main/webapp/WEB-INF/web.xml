<!DOCTYPE web-app PUBLIC
    "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
    <servlet-name>AppointmentController</servlet-name>
    <display-name>AppointmentController</display-name>
    <servlet-class>com.fasal.jobs.controller.AppointmentController</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>JobSeekerController</servlet-name>
    <display-name>JobSeekerController</display-name>
    <servlet-class>com.fasal.jobs.controller.JobSeekerController</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ConsultantController</servlet-name>
    <display-name>ConsultantController</display-name>
    <servlet-class>com.fasal.jobs.controller.ConsultantController</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>AuthenticationController</servlet-name>
    <display-name>AuthenticationController</display-name>
    <servlet-class>com.fasal.jobs.controller.AuthenticationController</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>AppointmentController</servlet-name>
    <url-pattern>/appointment</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>JobSeekerController</servlet-name>
    <url-pattern>/job-seeker</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>ConsultantController</servlet-name>
    <url-pattern>/consultant</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>AuthenticationController</servlet-name>
    <url-pattern>/authentication</url-pattern>
  </servlet-mapping>
</web-app>
