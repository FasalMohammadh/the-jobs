<!DOCTYPE web-app PUBLIC
    "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>The Jobs</display-name>

  <filter>
    <filter-name>EmployeeRoutesFilter</filter-name>
    <filter-class>com.fasal.jobs.filter.EmployeeRoutesFilter</filter-class>
  </filter>

  <filter-mapping>
    <filter-name>EmployeeRoutesFilter</filter-name>
    <url-pattern>/appointment</url-pattern>
  </filter-mapping>

  <filter-mapping>
    <filter-name>EmployeeRoutesFilter</filter-name>
    <url-pattern>/consultant</url-pattern>
  </filter-mapping>

  <filter-mapping>
    <filter-name>EmployeeRoutesFilter</filter-name>
    <url-pattern>/report</url-pattern>
  </filter-mapping>

  <filter-mapping>
    <filter-name>EmployeeRoutesFilter</filter-name>
    <url-pattern>/report.jsp</url-pattern>
  </filter-mapping>

  <filter-mapping>
    <filter-name>EmployeeRoutesFilter</filter-name>
    <url-pattern>/consultant.jsp</url-pattern>
  </filter-mapping>

  <filter-mapping>
    <filter-name>EmployeeRoutesFilter</filter-name>
    <url-pattern>/appointment.jsp</url-pattern>
  </filter-mapping>

  <filter-mapping>
    <filter-name>EmployeeRoutesFilter</filter-name>
    <url-pattern>/job-seeker.jsp</url-pattern>
  </filter-mapping>

  <filter-mapping>
    <filter-name>EmployeeRoutesFilter</filter-name>
    <url-pattern>/job-seeker</url-pattern>
  </filter-mapping>

  <servlet>
    <servlet-name>AppointmentController</servlet-name>
    <display-name>AppointmentController</display-name>
    <servlet-class>com.fasal.jobs.controller.AppointmentController</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>JobSeekerController</servlet-name>
    <display-name>JobSeekerController</display-name>
    <servlet-class>com.fasal.jobs.controller.JobSeekerController</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ConsultantController</servlet-name>
    <display-name>ConsultantController</display-name>
    <servlet-class>com.fasal.jobs.controller.ConsultantController</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>EmployeeController</servlet-name>
    <display-name>EmployeeController</display-name>
    <servlet-class>com.fasal.jobs.controller.EmployeeController</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ReportController</servlet-name>
    <display-name>ReportController</display-name>
    <servlet-class>com.fasal.jobs.controller.ReportController</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>HomeController</servlet-name>
    <display-name>HomeController</display-name>
    <servlet-class>com.fasal.jobs.controller.HomeController</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>AppointmentController</servlet-name>
    <url-pattern>/appointment</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>JobSeekerController</servlet-name>
    <url-pattern>/job-seeker</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>ConsultantController</servlet-name>
    <url-pattern>/consultant</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>EmployeeController</servlet-name>
    <url-pattern>/employee</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>ReportController</servlet-name>
    <url-pattern>/report</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>HomeController</servlet-name>
    <url-pattern>/home</url-pattern>
  </servlet-mapping>

</web-app>
